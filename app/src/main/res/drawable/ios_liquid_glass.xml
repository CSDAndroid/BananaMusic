<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- 外层阴影 - 更柔和的阴影 -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#15000000" />
            <corners android:radius="35dp" />
        </shape>
    </item>
    
    <!-- 主玻璃背景 - 更真实的半透明效果 -->
    <item android:top="1dp" android:left="1dp" android:right="1dp" android:bottom="1dp">
        <shape android:shape="rectangle">
            <gradient
                android:startColor="#E6FFFFFF"
                android:centerColor="#CCFFFFFF"
                android:endColor="#B3FFFFFF"
                android:angle="135" />
            <corners android:radius="34dp" />
        </shape>
    </item>
    
    <!-- 内层玻璃质感 - 增强透明度层次 -->
    <item android:top="2dp" android:left="2dp" android:right="2dp" android:bottom="2dp">
        <shape android:shape="rectangle">
            <gradient
                android:startColor="#80FFFFFF"
                android:endColor="#40FFFFFF"
                android:angle="45" />
            <corners android:radius="33dp" />
        </shape>
    </item>
    
    <!-- 顶部高光 - 模拟玻璃反光 -->
    <item android:top="3dp" android:left="3dp" android:right="3dp" android:bottom="40dp">
        <shape android:shape="rectangle">
            <gradient
                android:startColor="#99FFFFFF"
                android:centerColor="#40FFFFFF"
                android:endColor="#00FFFFFF"
                android:angle="0" />
            <corners android:radius="32dp" />
        </shape>
    </item>
    
    <!-- 左侧高光 - 增强立体感 -->
    <item android:top="3dp" android:left="3dp" android:right="40dp" android:bottom="3dp">
        <shape android:shape="rectangle">
            <gradient
                android:startColor="#60FFFFFF"
                android:endColor="#00FFFFFF"
                android:angle="90" />
            <corners android:radius="32dp" />
        </shape>
    </item>
    
    <!-- 内边框 - 增强玻璃边缘效果 -->
    <item android:top="4dp" android:left="4dp" android:right="4dp" android:bottom="4dp">
        <shape android:shape="rectangle">
            <stroke android:width="1dp" android:color="#20FFFFFF" />
            <corners android:radius="31dp" />
        </shape>
    </item>
</layer-list> 
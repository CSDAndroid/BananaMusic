<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- 圆角半径，数值越大圆角越明显 -->
    <corners android:radius="20dp" />

    <!-- 半透明背景色，实现毛玻璃效果 -->
    <solid android:color="#80FFFFFF" />

    <!-- 可选：添加边框 -->
    <stroke
        android:width="1dp"
        android:color="#CCFFFFFF" />

    <!-- 可选：内边距 -->
    <padding
        android:bottom="8dp"
        android:left="16dp"
        android:right="16dp"
        android:top="8dp" />

</shape>
